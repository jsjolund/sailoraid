<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inclineFocusView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:showIn="@layout/feedback_activity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="250dp"
        android:id="@+id/boatalignmentholder"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="bottom"
        android:background="@drawable/gyro2"
        android:baselineAligned="false"/>


    <LinearLayout
        android:layout_width="200dp"
        android:id="@+id/feedbackTextLayout"
        app:layout_constraintTop_toBottomOf="@+id/boatalignmentholder"
        app:layout_constraintBottom_toTopOf="@+id/tableLayoutHolder"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

    </LinearLayout>

    <TableLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:background="@color/darkblue"
        android:id="@+id/tableLeftFeedback1"

        android:gravity="bottom"
        app:layout_constraintTop_toBottomOf="@id/boatalignmentholder">
        <TableRow
            android:layout_margin="1dp"
            android:layout_width="wrap_content"
            android:background="@color/background">

            <TextView
                android:text="Tilt: "
                android:textSize="8pt"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tiltText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">
            <TextView
                android:text="SOG: "
                android:textSize="8pt"/>
            <TextView
                android:id="@+id/speedText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">
            <TextView
                android:text="TEMP: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/tempText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">
            <TextView
                android:text="HUM: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/humText"
                android:textSize="8pt"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="@color/background">>

            <TextView
                android:text="Range: "
                android:textSize="8pt" />

            <TextView
                android:id="@+id/rangeText"
                android:textSize="8pt" />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">>
            <TextView
                android:text="Tilt: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/tiltYText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">>
            <TextView
                android:text="Drift: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/driftText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">>
            <TextView
                android:text="Z: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/zText"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">>
            <TextView
                android:text="Bat: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/batPer"
                android:textSize="8pt"
                />
        </TableRow>
        <TableRow
            android:layout_margin="1dp"
            android:background="@color/background">>
            <TextView
                android:text="Bat: "
                android:textSize="8pt"
                />
            <TextView
                android:id="@+id/batLeft"
                android:textSize="8pt"
                />
        </TableRow>
        <Button
            android:id="@+id/mapviewbtn"
            android:text="View map"
            android:background="@color/laserblue"
            android:layout_margin="1dp"
            android:textSize="8pt"
            android:textColor="@color/darkblue"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            />

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutHolder"
        app:layout_constraintTop_toBottomOf="@+id/feedbackTextLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tableLeftFeedback1"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <TableLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@color/background"
            android:id="@+id/tableLeftFeedback2"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent">


            <LinearLayout
                android:id="@+id/driftImg"
                android:layout_height="150dp"
                android:background="@drawable/compass"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                />

            <LinearLayout
                android:id="@+id/driftBar"
                android:background="@drawable/driftbar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/leftDrift"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
                <LinearLayout
                    android:id="@+id/rightDrift"
                    android:layout_width="73dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:text ="Drift"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/callbackText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/background"/>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/darkblue"
            android:padding="3dp"
            android:layout_weight="1"
            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/background"
                android:layout_margin="1dp"
                android:id="@+id/pressureTableRow">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="160dp"
                    android:background="@drawable/pressure_bar"
                    android:id="@+id/pressureMeter"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow
                android:id="@+id/pressureTextRow"
                android:layout_height="70dp"
                android:layout_width="wrap_content"
                android:background="@color/background"
                android:layout_margin="1dp">
                <TextView
                    android:id="@+id/pressureText"
                    android:layout_width="wrap_content"
                    android:textSize="8pt"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>